{
  "name": "webpack-shell-plugin-next",
  "version": "1.1.1",
  "description": "Run shell commands before and after webpack builds",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "test": "webpack --mode development",
    "test:dev": "webpack-dev-server --progress",
    "prepublish": "npm run clean && npm run build",
    "prepare": "npm run build",
    "build": "tsc",
    "webpack": "webpack --progress --mode production",
    "webpack-dev-server": "webpack-dev-server --progress",
    "lint": "tslint --project tsconfig.json ./src/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s00d/webpack-shell-plugin-next.git"
  },
  "keywords": [
    "webpack",
    "shell",
    "plugin",
    "shell",
    "serve",
    "hmr",
    "browser",
    "script",
    "opie",
    "manion",
    "typescript"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/s00d/webpack-shell-plugin-next/issues"
  },
  "homepage": "https://github.com/s00d/webpack-shell-plugin-next",
  "dependencies": {
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/preset-env": "^7.6.3",
    "@types/node": "^12.11.1",
    "@types/source-map": "^0.5.7",
    "@types/webpack": "^4.39.3",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^3.2.0",
    "rimraf": "^3.0.0",
    "source-map": "^0.7.3",
    "style-loader": "^1.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
